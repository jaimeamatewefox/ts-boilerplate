{
    "name": "ts-template",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "tsc -p .",
        "prestart": "npm run build",
        "start": "node dist/index",
        "dev": "nodemon -r dotenv/config",
        "lint": "eslint --ext .ts --config .eslintrc.json src && eslint --ext .ts --config .eslintrc.json",
        "eslint:fix": "eslint --fix --ext .ts --config .eslintrc.json src && eslint --fix --ext .ts --config .eslintrc.json",
        "prettier:check": "prettier --check .",
        "prettier:write": "prettier --write .",
        "test": "jest"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@hapi/boom": "^7.3.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^26.0.14",
        "@types/joi": "^17.2.3",
        "@types/node": "^14.11.2",
        "@types/supertest": "^2.0.10",
        "@types/uuid": "^8.3.3",
        "@typescript-eslint/eslint-plugin": "^4.2.0",
        "@typescript-eslint/parser": "^4.2.0",
        "eslint": "^7.31.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jest": "^24.3.6",
        "jest": "^26.6.3",
        "lint-staged": "^10.4.0",
        "nodemon": "^2.0.4",
        "prettier": "2.3.2",
        "ts-jest": "^26.4.0",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "axios": "^0.24.0",
        "boom": "^7.3.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "joi": "^17.5.0",
        "nanoid": "^3.1.30",
        "supertest": "^6.1.6",
        "uuid": "^8.3.2",
        "mongoose": "^6.1.6"
    },
    "lint-staged": {
        "*.js": "eslint --cache --fix"
    },
    "jest": {
        "preset": "ts-jest",
        "testMatch": [
            "**/?(*.)+(spec|test).ts"
        ],
        "clearMocks": true,
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "json",
            "text",
            "lcov",
            "clover"
        ],
        "testEnvironment": "node",
        "setupFiles": [
            "dotenv/config"
        ]
    }
}
